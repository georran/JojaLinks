* {
  padding: 0;
  margin: 0;
  vertical-align: baseline;
  list-style: none;
  border: 0;
  color: #ffff;
}

body {
  background: url(./assets/b-dark.svg);
}

main {
  display: flex;
  flex-direction: column;
  justify-content: flex-end;
  align-items: center;
  padding: 0px;
}

div {
  display: flex;
  flex-direction: column;
  align-items: center;
}

#joja {
  width: 120px;
  height: 120px;
  border: 1.5px solid rgba(255, 255, 255, 0.5);
}

#profile {
  padding: 24px;
  gap: 8px;
}

#links {
  align-items: flex-start;
  padding: 24px;
  gap: 16px;
}

#links button {
  background: rgba(255, 255, 255, 0.1);
  border: 1px solid rgba(255, 255, 255, 0.5);
  backdrop-filter: blur(4px);
  border-radius: 8px;
  justify-content: center;
  align-items: center;
  padding: 16px 24px;
  gap: 8px;
  width: 100%;
  height: 50px;
}

#social {
  flex-direction: row;
  justify-content: center;
  align-items: flex-start;
  padding: 24px;
  gap: 16px;
}
